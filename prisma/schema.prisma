generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FailedPayment {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  customerName  String
  customerEmail String
  productName   String
  amount        Float
  currency      String   @default("USD")
  reason        String?
  status        String   @default("FAILED") // FAILED | CONTACTED | RECOVERED
}

